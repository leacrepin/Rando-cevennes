{% extends 'base.html.twig' %}

{% block title %}Inscriptions aux randonnées{% endblock %}

{% block body %}
    <h1>Inscriptions aux randonnées</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Message</th>
                <th>DateDemande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for incription_rando in incription_randos %}
            <tr>
                <td>{{ incription_rando.id }}</td>
                <td>{{ incription_rando.nom }}</td>
                <td>{{ incription_rando.email }}</td>
                <td>{{ incription_rando.message }}</td>
                <td>{{ incription_rando.dateDemande ? incription_rando.dateDemande|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('incription_rando_show', {'id': incription_rando.id}) }} ">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'inscription enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
