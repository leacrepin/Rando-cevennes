{% extends 'base.html.twig' %}
{% block title %}{{ rando.titre}}{% endblock %}
{% block body %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ rando.titre | upper}} ({{rando.duree}}h)</h5>
                <p class="card-text">{{ rando.description}}</p>
                <p class="card-text">{{ rando.dateRando|date('Y-m-d')}}</p>
                <a href={{ path('InscriptionRando', {'id': rando.id}) }} class="btn btn-primary">Inscription</a>
                <a href={{ path('VoirRandoByCat', {'id': rando.categorie.id}) }} class="btn btn-primary">Retour</a>
            </div>
        </div>
        <br>
{% endblock %}